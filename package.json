{
  "name": "villeray",
  "version": "1.0.0",
  "description": "A simple javascript framework for uncomplicated web-apps",
  "main": "villeray.js",
  "scripts": {
    "fmt": "prettier villeray.js --write",
    "minify": "esbuild villeray.js --outfile=villeray.min.js --minify --target=es2020",
    "lint": "eslint villeray.js",
    "build": "npm run fmt && npm run lint && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/villeray/framework.git"
  },
  "keywords": ["framework", "declarative", "webapps"],
  "author": "Avery Nortonsmith",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/villeray/framework/issues"
  },
  "homepage": "https://github.com/villeray/framework#readme",
  "devDependencies": {
    "esbuild": "^0.13.8",
    "eslint": "^8.0.1",
    "prettier": "^2.4.1",
    "terser": "^5.9.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {}
  }
}
