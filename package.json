{
  "name": "villeray",
  "description": "Javascript functions for dynamic page elements",
  "main": "src/villeray.js",
  "type": "module",
  "scripts": {
    "fmt": "prettier src --write",
    "bundle": "esbuild src/villeray.js --outfile=villeray.min.js --bundle --format=esm --minify --target=es6",
    "lint": "eslint src",
    "build": "npm run fmt && npm run lint && npm run bundle"
  },
  "author": "Avery Nortonsmith",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.13.8",
    "eslint": "^8.0.1",
    "prettier": "^2.4.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    }
  }
}
