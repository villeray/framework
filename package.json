{
  "name": "villeray",
  "version": "1.0.0",
  "description": "A simple javascript framework for uncomplicated web-apps",
  "main": "villeray.js",
  "scripts": {
    "fmt": "npx prettier villeray.js --write",
    "minify": "npx terser villeray.js -c -m -o villeray.min.js",
    "lint": "npx eslint villeray.js",
    "build": "npm run fmt && npm run lint && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/villeray/framework.git"
  },
  "author": "Avery Nortonsmith",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/villeray/framework/issues"
  },
  "homepage": "https://github.com/villeray/framework#readme",
  "devDependencies": {
    "eslint": "^8.0.1",
    "prettier": "^2.4.1",
    "terser": "^5.9.0"
  },
  "eslintConfig": {
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
    }
  }
}
